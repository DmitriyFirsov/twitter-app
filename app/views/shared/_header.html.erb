<%= stylesheet_link_tag 'header' %>
<header class="header">
  <% if user_signed_in? %>
    <div class="header-user-container">
      <div>
        <%= current_user.name %>
      </div>
      <div>
        <%= current_user.surname %>
      </div>
      <%= link_to "Sign out", "/user/sign_out", :method => :delete %>
    </div>
  <% else %>
    <div>Login</div>
  <% end %>
</header>
