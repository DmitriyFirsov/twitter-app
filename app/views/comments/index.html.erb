<%= render 'articles/shared/article', article: @article, show_header: true, show_comment_link: false %>

<style>
  .container {
      display: flex;
      flex-direction: column;
  }
</style>

<div class="container">
  <% @article.comments.each do |comment| %>
    <div>
      <div>
        <%= comment.message %>
      </div>
      <div>
        <%= tag_time_ago_in_words comment.created_at, 'articles.list.posted_ago.html' %>
      </div>
    </div>
  <% end %>
</div>
