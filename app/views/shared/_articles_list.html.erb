<% @articles.each do |article| %>
  <article class="article">
    <header class="article-name-container">
      <p>
        <%= article.user.name %>
      </p>
      <p>
        <%= article.user.surname %>
      </p>
    </header>
    <section>
      <%= article.message %>
    </section>
    <footer>
      Posted
      <time datetime="<%= article.created_at %>">
        <%= time_ago_in_words(article.created_at) %>
      </time>
      ago
    </footer>
  </article>
<% end %>