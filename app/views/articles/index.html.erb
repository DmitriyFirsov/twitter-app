<% if @user_filter %>
  <h1><%= @user_filter.name %> <%= @user_filter.surname %> articles</h1>
<% end %>

<% @articles.each do |article| %>
  <%= render 'articles/shared/article', article: article, show_header: @user_filter, show_comment_link: true %>
<% end %>
<% content_for :head do %>
  <%= javascript_include_tag "articles.js" %>
<% end %>
