
<% content_for :head do %>
  <%= stylesheet_link_tag 'header' %>
<% end %>
<header class="header">
  <% if user_signed_in? %>
    <div class="header-user-container">
      <div>
        <%= current_user.name %>
      </div>
      <div>
        <%= current_user.surname %>
      </div>
      <%= link_to "Sign out", "/user/sign_out" %>
    </div>
  <% else %>
    <%= link_to "Sign in", "/user/sign_in" %>
  <% end %>
</header>
